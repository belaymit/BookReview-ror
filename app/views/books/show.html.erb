<div class="container">
  <h2>Book Detail</h2>
  <h3><%= @book.title%></h3>
  <h4><%= @book.author%></h4>
  <p><%= @book.description%></p>
  <%= link_to "Go Back", root_path %>
  <%= link_to "Edit", edit_book_path(@book) %>
  <%= link_to "Delete", book_path(@book), method: :delete,  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
</div>
